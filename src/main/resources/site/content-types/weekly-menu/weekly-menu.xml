<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Weekly Menu</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input type="Date" name="week">
      <label>Week</label>
      <occurrences minimum="1" maximum="1"/>
      <default>now</default>
    </input>
    <input type="HtmlArea" name="monday">
      <label>Monday</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="HtmlArea" name="tuesday">
      <label>Tuesday</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="HtmlArea" name="wednesday">
      <label>Wednesday</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="HtmlArea" name="thursday">
      <label>Thursday</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="HtmlArea" name="friday">
      <label>Friday</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</content-type>
